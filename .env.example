# Database Configuration
# Replace with your actual database connection details
DB_HOST=localhost
DB_PORT=5432
DB_NAME=appdb
DB_USER=postgres
DB_PASSWORD=your-secure-database-password
DB_DDL_AUTO=update
DB_SHOW_SQL=false
DB_FORMAT_SQL=false

# Server Configuration
PORT=8080

# JWT Configuration
# Generate a secure random string for production (at least 256 bits)
JWT_SECRET=your-super-secure-jwt-secret-key-at-least-256-bits-long-change-this-in-production
JWT_EXPIRATION=86400000

# Logging Configuration
# Options: TRACE, DEBUG, INFO, WARN, ERROR
LOG_LEVEL=INFO
SECURITY_LOG_LEVEL=WARN
WEB_LOG_LEVEL=INFO
SQL_LOG_LEVEL=WARN
SQL_BINDER_LOG_LEVEL=WARN

# CORS Configuration
# Add your frontend domain(s) separated by commas
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,https://your-render-app.onrender.com
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=*
CORS_ALLOW_CREDENTIALS=true

# Security Configuration
# Set to true in production with HTTPS
REQUIRE_SSL=false
SESSION_TIMEOUT=1800

# Spring Configuration
# Options: dev, prod, test
SPRING_PROFILES_ACTIVE=dev
